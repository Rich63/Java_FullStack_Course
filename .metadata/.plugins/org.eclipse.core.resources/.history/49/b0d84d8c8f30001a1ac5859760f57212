
public class Hello {

	public static void main(String[] args) {
		
		int intMaxValue = 2147483647;
		int intMinValue = -2147483647;
		short shortMaxValue = 32767;
		short shortMinValue = -32767;
	
		
		String first = "Hello", second = "World!";
		System.out.println(first + ' ' + second);
		System.out.println("The value for an int must be between " 
				+ intMinValue + " and " + intMaxValue);
		System.out.println("The value for an short must be between " 
				+ shortMinValue + " and " + shortMaxValue);

	}

}
